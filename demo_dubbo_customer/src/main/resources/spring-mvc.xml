<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/mvc
        http://www.springframework.org/schema/mvc/spring-mvc.xsd">

    <import resource="classpath:dubbo-customer.xml"/>

    <!--SwaggerConfig注入-->
    <bean class="com.py.demo.swagger.SwaggerConfig"/>
    <context:annotation-config/>

    <!--静态资源默认servlet配置a
    	1、加入对静态资源的处理:js,css,gif,png
    	2、允许使用"/"做整体映射
    -->
    <mvc:default-servlet-handler/>
    <!--注解方式(处理请求)-->
    <mvc:annotation-driven/>

    <!-- 自动扫描该包，使SpringMVC认为包下用了@controller注解的类是控制器 -->
    <context:component-scan base-package="com.py.demo.controller">
        <context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
    </context:component-scan>


    <!-- Configures Handler Interceptors 拦截器-->
    <mvc:interceptors>
        <!-- Changes the locale when a 'locale' request parameter is sent; e.g.?locale=de -->
        <bean class="org.springframework.web.servlet.i18n.LocaleChangeInterceptor"/>
        <!--<bean class="com.ibbpp.base.com.py.demo.interceptor.AuthInterceptor" />-->
        <bean class="com.py.demo.interceptor.ExceptionInterceptor"/>
    </mvc:interceptors>

    <!--避免IE执行AJAX时，返回JSON出现下载文件 -->
    <bean id="mappingJacksonHttpMessageConverter"
          class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter">
        <property name="supportedMediaTypes">
            <list>
                <value>text/html;charset=UTF-8</value>
            </list>
        </property>
    </bean>

    <!-- 启动SpringMVC的注解功能，完成请求和注解POJO的映射 -->
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
        <property name="messageConverters">
            <list>
                <ref bean="mappingJacksonHttpMessageConverter"/> <!-- JSON转换器 -->
            </list>
        </property>
    </bean>

    <!-- 静态资源处理  css js imgs -->
    <!--<mvc:resources location="/jsp/**" mapping="/WEB-INF/jsp/"/>-->
    <mvc:resources mapping="css/**" location="/css/"/>
    <mvc:resources mapping="js/**" location="/js/"/>
    <mvc:resources mapping="/swagger/**" location="/WEB-INF/swagger/"/>
    <mvc:resources mapping="/bootstrap/**" location="/WEB-INF/bootstrap/"/>
    <mvc:resources mapping="/blog/**" location="/WEB-INF/blog/"/>
    <!--<mvc:resources mapping="/template/**" location="/WEB-INF/template/"/>-->

    <!--com.py.demo.swagger-->
    <!--<context:component-scan base-package="com.py.test.com.py.demo.swagger"/>-->

    <!--freemarker Begin-->
    <!-- freemarker的配置 -->
    <bean id="freemarkerConfig"
          class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
        <!-- 模版位置，这里配置了下面就不用配了 -->
        <property name="templateLoaderPath" value="\WEB-INF\template"/>
        <property name="freemarkerSettings"><!-- 一些设置 -->
            <props>
                <prop key="template_update_delay">0</prop>
                <prop key="default_encoding">UTF-8</prop>
                <prop key="number_format">0.##########</prop>
                <prop key="datetime_format">yyyy-MM-dd HH:mm:ss</prop>
                <prop key="classic_compatible">true</prop>
                <prop key="template_exception_handler">ignore</prop>
            </props>
        </property>
    </bean>

    <!-- freeMarker视图解析器 -->
    <bean id="freemarkerViewResolver"
          class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
        <property name="viewClass" value="org.springframework.web.servlet.view.freemarker.FreeMarkerView"
        />
        <property name="viewNames" value="*.ftl"/>
        <property name="contentType" value="text/html; charset=utf-8"/>
        <property name="cache" value="true"/>
        <property name="suffix" value=""/>
        <!--    作用百度即可
            <property name="exposeRequestAttributes" value="true" />
            <property name="exposeSessionAttributes" value="true" />
            <property name="exposeSpringMacroHelpers" value="true" />
        -->
        <!-- 视图先走这个freemarker的，再走原始的 -->
        <property name="order" value="0"/>
    </bean>
    <!--freemarker End-->

    <!-- 定义跳转的文件的前后缀 ，视图模式配置-->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <!-- 这里的配置我的理解是自动给后面action的方法return的字符串加上前缀和后缀，变成一个 可用的url地址 -->
        <property name="order" value="1"/><!-- 增加一个属性，如果找不到freemarker的模版则走原始的 -->
        <property name="prefix" value="/WEB-INF/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>


    <!--跨域请求-->
    <mvc:cors>
        <mvc:mapping path="/**"/>
    </mvc:cors>
</beans>